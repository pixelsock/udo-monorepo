# Database Configuration
DB_CLIENT=pg
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=directus
DB_USER=directus
DB_PASSWORD=your_database_password_here

# Security
SECRET=your_secret_key_here_minimum_32_characters
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password_here

# Public URL
PUBLIC_URL=http://localhost:8055

# Cache Configuration (optional)
CACHE_ENABLED=false
CACHE_AUTO_PURGE=true
# CACHE_STORE=redis
# REDIS=redis://localhost:6379

# Content Security Policy
CONTENT_SECURITY_POLICY_DIRECTIVES__SCRIPT_SRC='self' https://unpkg.com data:

# Orama Cloud Search Integration (optional)
# ORAMA_CLOUD_API_KEY=your_orama_api_key_here
# ORAMA_CLOUD_INDEX_ID=your_orama_index_id_here
# ORAMA_COLLECTIONS=articles,pages,posts,content

# Extensions Auto Reload (for development)
EXTENSIONS_AUTO_RELOAD=true

# Additional Configuration
# LOG_LEVEL=info
# LOG_STYLE=pretty
# ACCESS_TOKEN_TTL=15m
# REFRESH_TOKEN_TTL=7d
# REFRESH_TOKEN_COOKIE_SECURE=false
# REFRESH_TOKEN_COOKIE_SAME_SITE=lax
# REFRESH_TOKEN_COOKIE_NAME=directus_refresh_token

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Used by deployment scripts - set these for production deployments
DIRECTUS_PRODUCTION_URL=https://your-production-url.com
DIRECTUS_ADMIN_PASSWORD=your-production-admin-password

# =============================================================================
# PRODUCTION SECURITY SETTINGS
# =============================================================================
# Enable these for production environments
# RATE_LIMITER_ENABLED=true
# RATE_LIMITER_STORE=redis
# RATE_LIMITER_REDIS=redis://localhost:6379
# HELMET_ENABLED=true
# CORS_ENABLED=true
# CORS_ORIGIN=https://your-frontend-domain.com
# TELEMETRY=false